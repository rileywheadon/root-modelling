@article{fozard2013,
  title = {Vertex-Element Models for Anisotropic Growth of Elongated Plant Organs},
  author = {Fozard, John A. and Lucas, Mika{\"e}l and King, John R. and Jensen, Oliver E.},
  year = {2013},
  month = jul,
  journal = {Frontiers in Plant Science},
  volume = {4},
  publisher = {Frontiers},
  issn = {1664-462X},
  doi = {10.3389/fpls.2013.00233},
